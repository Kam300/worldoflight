<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg">

        <!-- Профиль пользователя -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_xl">

            <!-- Круглый аватар -->
            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_user_avatar"
                android:background="@drawable/circular_avatar_background"
                android:scaleType="centerCrop"
                android:layout_marginBottom="@dimen/spacing_lg" />

            <!-- Имя пользователя -->
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emmanuel Oyiboke"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="@font/raleway"
                android:layout_marginBottom="@dimen/spacing_xl" />

            <!-- Штрих-код -->
            <ImageView
                android:id="@+id/iv_barcode"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_barcode"
                android:scaleType="fitXY"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <!-- Подпись штрих-кода -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Штрих-код"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/raleway"
                android:layout_marginBottom="@dimen/spacing_xl" />

        </LinearLayout>

        <!-- Поля ввода -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Имя -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/raleway"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxBackgroundColor="@color/input_background">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emmanuel"
                    android:textSize="16sp"
                    android:fontFamily="@font/raleway"
                    android:padding="@dimen/spacing_md" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Фамилия -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фамилия"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/raleway"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxBackgroundColor="@color/input_background">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Oyiboke"
                    android:textSize="16sp"
                    android:fontFamily="@font/raleway"
                    android:padding="@dimen/spacing_md" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Адрес -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Адрес"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/raleway"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxBackgroundColor="@color/input_background">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nigeria"
                    android:textSize="16sp"
                    android:fontFamily="@font/raleway"
                    android:padding="@dimen/spacing_md" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Телефон -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Телефон"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/raleway"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xl"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxBackgroundColor="@color/input_background"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_lock">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+234 *** *** **67"
                    android:textSize="16sp"
                    android:fontFamily="@font/raleway"
                    android:padding="@dimen/spacing_md"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lg"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
