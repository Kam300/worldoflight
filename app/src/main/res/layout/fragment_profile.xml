<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Кнопка редактирования -->
        <ImageButton
            android:id="@+id/btn_edit_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_edit"
            android:background="@drawable/edit_button_background"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:tint="@color/light_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Аватар пользователя -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_profile_placeholder"
            android:layout_marginTop="40dp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/light_blue"
            app:layout_constraintTop_toBottomOf="@id/btn_edit_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Имя пользователя -->
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emmanuel Oyiboke"
            android:textSize="24sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:fontFamily="@font/raleway"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/iv_user_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- QR код (заглушка) -->
        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@drawable/barcode_placeholder"
            android:scaleType="fitCenter"
            android:layout_marginTop="16dp"
            android:rotation="90"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Поля профиля -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/iv_qr_code">

            <!-- Имя -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="@font/raleway"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emmanuel"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/raleway"
                android:background="@drawable/profile_field_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Фамилия -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фамилия"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="@font/raleway"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oyiboke"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/raleway"
                android:background="@drawable/profile_field_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Адрес -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Адрес"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="@font/raleway"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nigeria"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/raleway"
                android:background="@drawable/profile_field_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Телефон -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Телефон"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="@font/raleway"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+7 811-732-5298"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/raleway"
                android:background="@drawable/profile_field_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Email (только для чтения) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="@font/raleway"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="emmanuel@example.com"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/raleway"
                android:background="@drawable/profile_field_background"
                android:padding="16dp"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

        <!-- Индикатор загрузки -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
