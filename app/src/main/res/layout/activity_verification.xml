<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:padding="24dp">

    <!-- Кнопка назад -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="16dp"
        app:tint="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Заголовок -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Проверка"
        android:textSize="32sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:fontFamily="@font/raleway"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Подзаголовок -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Пожалуйста Проверьте Свою\nЭлектронную Почту Чтобы Увидеть Код\nПодтверждения"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="@font/raleway"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- OTP Код -->
    <TextView
        android:id="@+id/label_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Код"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/raleway"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- OTP поля -->
    <LinearLayout
        android:id="@+id/otp_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/label_otp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_otp1"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/otp_field_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/raleway"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/et_otp2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/otp_field_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/raleway"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/et_otp3"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/otp_field_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/raleway"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/et_otp4"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/otp_field_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/raleway"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/et_otp5"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/otp_field_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/raleway" />

    </LinearLayout>

    <!-- Отправить заново -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/otp_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отправить заново"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/raleway" />

        <TextView
            android:id="@+id/tv_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Здесь"
            android:textSize="14sp"
            android:textColor="@color/light_blue"
            android:fontFamily="@font/raleway"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

    <!-- Кнопка подтверждения -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_verify"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Подтвердить"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/raleway"
        app:backgroundTint="@color/light_blue"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
