<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="32dp"
    android:gravity="center">

    <!-- Иконка празднования -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_celebration"
        android:layout_marginBottom="24dp" />

    <!-- Заголовок -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вы успешно оформили заказ"
        android:textSize="20sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:fontFamily="@font/raleway"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <!-- Информация о заказе -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/order_details_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <!-- Номер заказа -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Номер заказа:"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/raleway" />

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WOL12345678"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="@font/raleway" />

        </LinearLayout>

        <!-- Сумма заказа -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Сумма:"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/raleway" />

            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₽814.15"
                android:textSize="14sp"
                android:textColor="@color/light_blue"
                android:textStyle="bold"
                android:fontFamily="@font/raleway" />

        </LinearLayout>

    </LinearLayout>

    <!-- Кнопка -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue_shopping"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Вернуться к покупкам"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway"
        android:textStyle="bold"
        app:backgroundTint="@color/light_blue"
        app:cornerRadius="16dp"
        android:textAllCaps="false" />

</LinearLayout>
